{
  "name": "craftmatic",
  "version": "0.2.1",
  "description": "Minecraft schematic toolkit â€” parse, generate, render, and convert .schem files",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "craftmatic": "bin/craftmatic.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "build:web": "vite build --config web/vite.config.ts",
    "dev": "tsc --watch",
    "dev:web": "vite --config web/vite.config.ts",
    "preview:web": "vite preview --config web/vite.config.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist web/dist",
    "prepublishOnly": "npm run build && npm run build:web"
  },
  "files": [
    "dist/",
    "web/dist/",
    "bin/",
    "textures/",
    "templates/",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "minecraft",
    "schematic",
    "schem",
    "nbt",
    "worldedit",
    "three",
    "threejs",
    "voxel",
    "generator"
  ],
  "author": "tribixbite",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tribixbite/craftmatic.git"
  },
  "homepage": "https://github.com/tribixbite/craftmatic#readme",
  "bugs": {
    "url": "https://github.com/tribixbite/craftmatic/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "express": "^4.21.2",
    "ora": "^8.2.0",
    "prismarine-nbt": "^2.7.0",
    "pureimage": "^0.4.18",
    "three": "^0.172.0"
  },
  "optionalDependencies": {
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.1",
    "@types/pako": "^2.0.4",
    "@types/three": "^0.172.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.0",
    "pako": "^2.1.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1",
    "vitest": "^3.0.5"
  }
}
