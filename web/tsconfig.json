{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@engine/*": ["./src/engine/*"],
      "@viewer/*": ["./src/viewer/*"],
      "@ui/*": ["./src/ui/*"],
      "@craft/*": ["../src/*"]
    }
  },
  "include": ["src/**/*.ts", "../src/types/**/*.ts", "../src/schem/types.ts", "../src/blocks/**/*.ts", "../src/gen/**/*.ts"]
}
